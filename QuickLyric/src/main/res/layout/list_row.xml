<com.geecko.QuickLyric.view.CheckableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/listview_row_selector"
    android:translationZ="4dp"
    elevation="4dp"
    android:layout_width="match_parent"
    android:layout_height="@dimen/row_height">

        <View
            android:id="@+id/center"
            android:layout_centerInParent="true"
            android:layout_width="fill_parent"
            android:layout_height="0dp" />

        <TextView
            tools:text="Bad"
            android:id="@+id/title"
            android:singleLine="true"
            android:scrollHorizontally="true"
            android:ellipsize="end"
            android:layout_above="@id/center"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textSize="@dimen/txt_size"
            android:textColor="@android:color/black"
            android:gravity="bottom" />

        <TextView
            tools:text="Michael Jackson"
            android:id="@+id/artist"
            android:singleLine="true"
            android:ellipsize="end"
            android:scrollHorizontally="true"
            android:layout_below="@id/center"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textSize="@dimen/small_txt_size" />
</com.geecko.QuickLyric.view.CheckableLayout>
